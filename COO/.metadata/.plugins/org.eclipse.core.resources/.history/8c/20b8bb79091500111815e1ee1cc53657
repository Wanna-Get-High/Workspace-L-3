package questionnairesUI;

import javax.swing.*;

import questionnaires.*;

public class NumericUI extends AnswerUI<Integer>
{
	JSpinner spinner;
	
	public NumericUI(Answer<Integer> ans)
	{
		super(ans);
		this.spinner = new JSpinner(new SpinnerNumberModel(0,-3000,3000,1));
	}
	
	public String getValue()
	{
		this.spinner.getValue().notify();
		return this.spinner.getValue();
	}
	
	@Override
	public JPanel getPanel()
	{
		this.panel.add(this.spinner);
		return this.panel;
	}
}
