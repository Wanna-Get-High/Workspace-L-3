package oie;

import java.util.*;

/**
 * 
 * @author franziz
 * the game that contains the players and the field
 */
public class Game 
{
	protected List<Player> thePlayers;
	protected Board board;
	
	public Game(Board board)
	{
		this.board = board;
	}
	
	public void addPlayer(Player p)
	{
		thePlayers.add(p);
	}
	
	public void play()
	{
		for (int i=0; i<thePlayers.size();i++)
		{
			thePlayers.get(i).setCell(board.getCell(0));
		}

		while (noPlayerWon())
		{
			for (int i=0; i<thePlayers.size();i++)
			{
				System.out.print("player num : "+ thePlayers.get(i));
				thePlayers.get(i).getCell().consequence(thePlayers.get(i).twoDicesThrow());
			}
		}
		System.out.println("end");
	}
	
	public boolean noPlayerWon()
	{
		for (int i=0; i<thePlayers.size();i++)
		{
			if (thePlayers.get(i).getCell().getIndex() == 64)
				return false;
		}
		
		return true;
	}
	
	public static void main (String []args)
	{
		
	}
}
