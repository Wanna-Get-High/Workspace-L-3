package questionnaires;

import java.util.StringTokenizer;
import questionnairesUI.*;

public class MultipleClosedAnswer extends Answer<String> 
{
	protected static String theAnswer;
    /**
     * Instantiates a new MultipleClosedAnswer.
     *
     * @param a the integer.
     */
    public MultipleClosedAnswer(String a) 
    {
    	super(a);
    }

    /**
     * Builds the Multiple Closed Answer.
     *
     * @param answerText the answer text
     * @return the answer
     */
    public static Answer<?> build(String answerText)
    {
    	StringTokenizer st = new StringTokenizer(answerText,"\\s+|\\s+");
    	String build = "";
    	int it = 0;

    	if (st.hasMoreTokens())
    	{
    		theAnswer = st.nextToken();
    		build = theAnswer;
    	}

    	while (st.hasMoreElements())
    	{
			if (it%2 == 0)
				build = st.nextToken() + " | " + build;
			
			else
				build +=  " | " + st.nextToken();
 
    		it++;
    	}
    	
    	return new MultipleClosedAnswer(build);
    }
    
    
    @Override
    public boolean checkAnswer(String userAnswer) 
	{
		if (theAnswer.contains(userAnswer))
			return true;

    	return false;
	}

    @Override
    public boolean acceptablePattern(String text) 
    {
    	StringTokenizer st = new StringTokenizer(this.answer,"\\s+|\\s+");
    	while (st.hasMoreTokens())
    	{
    		if (st.nextToken().contains(text))
    			return true;
    	}
    	return false;
    }

    @Override
    public String getType() 
    {
        return this.answer;
    }

    @Override
	public String toString()
	{
    	return theAnswer;
	}

	@Override
	public AnswerUI<String> getUI() 
	{
		return null;
	}
}
