package mail;

public class Inhabitant 
{
	private float accountBalance;
	protected Adress adress;
	
	public Inhabitant(float ab, Adress ad)
	{
		this.accountBalance = ab;
		this.adress = ad;
	}
	
	public void receiveMail(Mail<?> m)
	{
		Content cont = m.getContent();
		m.action();
		if(cont.equals(SimpleMail.class))
			((SimpleMail) cont).action();
		
		else if(cont.equals(GoGoMail.class))
			((GoGoMail) cont).action();
		
		else if (cont.equals(BillOfExchange.class))
			((BillOfExchange) cont).action();
		
		else if (cont.equals(RecommendedMail.class))
			((RecommendedMail) cont).action();
		
		else if ()
	}
	
	public void sendMail(Mail<?> m)
	{
		this.adress.getTown().postMail(m);
	}
	
	public void debitAccount(float amount)
	{
		this.accountBalance -= amount;
	}

	public void creditAccount(float amount)
	{
		this.accountBalance += amount;
	}
	
}
