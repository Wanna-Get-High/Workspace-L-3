package questionnairesUI;

import javax.swing.ButtonGroup;
import javax.swing.JPanel;
import javax.swing.JRadioButton;

import questionnaires.Answer;
import questionnaires.Positif;
import questionnaires.Question;

public class OuiNonUI extends MultipleAnswerUI<Positif>
{
	ButtonGroup group;
	JRadioButton oui;
	JRadioButton non;
	
	public OuiNonUI(Answer<Positif> ans, Question q)
	{
		super(ans, q);
		this.oui = new JRadioButton("oui");
		this.non = new JRadioButton("non");
		
		this.oui.setActionCommand("oui");
		this.non.setActionCommand("non");
		
		this.group = new ButtonGroup();
		this.group.add(oui);
		this.group.add(non);
		this.group.setSelected(oui.getModel(), true);
	}

	@Override
	public JPanel getPanel() 
	{
		this.panel.add(this.oui);
		this.panel.add(this.non);
		return this.panel;
	}

	@Override
	public String getValue() 
	{
		return this.group.getSelection().getActionCommand();
	}

}
