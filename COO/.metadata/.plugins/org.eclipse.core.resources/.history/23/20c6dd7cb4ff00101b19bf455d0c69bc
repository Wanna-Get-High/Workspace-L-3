package mail;

public class MailDecoration extends Mail<Mail<?>> 
{
	public MailDecoration(Inhabitant sen, Inhabitant rec, Mail<?> con) 
	{
		super(sen, rec, con);
	}

	@Override
	public void action() 
	{
		// TODO Auto-generated method stub
	}

	@Override
	public float getCost() 
	{
		// TODO Auto-generated method stub
		return 0;
	}
	
	public Inhabitant getReceiver()
	{
		return this.content.getReceiver();
	}
	
	public Inhabitant getSender()
	{
		return this.content.getSender();
	}
	
	public String toString()
	{
		return this.name;
	}
	
	@Override
	public String getDescription()
	{
		return "this content is a mail";
	}
}
