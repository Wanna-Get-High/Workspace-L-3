package mail;

public class RecommendedMail extends DecorationMail 
{
	private float percentage;
	
	public RecommendedMail(Mail<?> con) 
	{
		super(con);
		this.percentage = 15;
	}
	
	@Override
	public float getCost() 
	{
		return this.content.getCost() + ( this.content.getCost() * this.percentage ); 
	}
	
	@Override
	public void action() 
	{
		this.content.action();
		this.receiver.sendMail(new AcknoReceipt(this.receiver,this.sender,this.receiver.toString()));
	}
}
