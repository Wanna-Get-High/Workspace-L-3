package questionnairesUI;

import java.util.ArrayList;
import java.util.List;
import java.util.StringTokenizer;

import javax.swing.ButtonGroup;
import javax.swing.JPanel;
import javax.swing.JRadioButton;

import questionnaires.Answer;
import questionnaires.Question;

public abstract class MultClosedAnswUI extends AnswerUI<String>
{
	ButtonGroup group;
	List <String> values;
	
	public MultClosedAnswUI(Answer<String> ans, Question q) 
	{
		super(ans, q);
		this.values = new ArrayList <String>();
		this.initValues();
	}

	public abstract void initValues();

	@Override
	public String getValue() 
	{
		return this.group.getSelection().getActionCommand();
	}
}
