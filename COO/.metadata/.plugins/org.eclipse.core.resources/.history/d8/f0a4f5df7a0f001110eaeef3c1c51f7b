package mail;

import java.util.*;

public class Town 
{
	protected List <Mail<?>> boxLetter;
	
	public Town()
	{
		this.boxLetter = new ArrayList<Mail<?>>();
	}
	
	public void postMail(Mail<?> m)
	{
		this.boxLetter.add(m);
	}
	
	public void deliverMail()
	{
		for(Iterator<Mail<?>> iter = this.boxLetter.iterator(); iter.hasNext();) 
		{
			Mail<?> mail = iter.next();
			mail.getReceiver().receiveMail(mail);
		}
		this.boxLetter.clear();
	}
	
	/*public void clear()
	{
		synchronized(this.boxLetter)
		{
			for(Iterator<Mail<?>> iter = this.boxLetter.iterator(); iter.hasNext();) 
			{
				iter.remove();
			}
		}
	}*/
	
	public boolean mailToDeliver()
	{
		return !this.boxLetter.isEmpty();
	}
}
