package questionnairesUI;

import java.util.*;

import questionnaires.Answer;
import questionnaires.Question;

public class MultChoiceAnswer extends MultipleAnswerUI
{

	public MultChoiceAnswer(Answer<String> ans, Question q) 
	{
		super(ans, q);
		// TODO Auto-generated constructor stub
	}

	@Override
	public void initValues() 
	{
		StringTokenizer st = new StringTokenizer(this.answer.getCorrectAnswer(),"\\s+|\\s+");
		
		while (st.hasMoreElements())
		{
			this.values.add(st.nextToken());
		}
		
		st = new StringTokenizer(this.answer.getCorrectAnswer(),"\\s+|\\s+");
		
		for (String but : this.buttonList)
		{
			but.setActionCommand(st.nextToken());
			this.group.add(but);
		}
		this.group.setSelected(this.buttonList.get(0).getModel(), true);
				for (JRadioButton but : this.buttonList)
		{
			this.panel.add(but);
		}
		
	}
	/*
	*/
}
