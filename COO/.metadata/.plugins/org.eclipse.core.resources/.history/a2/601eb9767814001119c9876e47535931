package questionnaires;

import java.util.*;

/**
 * The Class MultipleOpenedAnswer.
 */
public class MultipleOpenedAnswer extends Answer<String> 
{
	/** The number of answer */
	protected int numberOfAnswer;
	
    /**
     * Instantiates a new MultipleOpenedAnswer.
     *
     * @param a the integer.
     */
    public MultipleOpenedAnswer(String a) 
    {
    	super(a);
    }

    /**
     * Builds the Multiple opened answer.
     *
     * @param answerText the answer text
     * @return the answer
     */
    public static Answer<?> build(String answerText)
    {
    	StringTokenizer st = new StringTokenizer(answerText," ; ");
    	String build = "";
    	
    	if (st.hasMoreTokens())
    		build = st.nextToken();
    	
    	while (st.hasMoreTokens())
    	{
    		build += " " + st.nextToken();
        }
    	
    	return new MultipleOpenedAnswer(build);
    }
    
    @Override
    public boolean checkAnswer(String userAnswer) 
	{
    	StringTokenizer st = new StringTokenizer(this.answer," ");
    	this.numberOfAnswer = st.countTokens();
    	
    	while (st.hasMoreTokens())
		{
    		if (userAnswer.equals(st.nextToken()))
    			return true;
		}
    	return false;
	}
    
    @Override
    public boolean acceptablePattern(String text) 
    {
    	return true;
    }
    
    @Override
    public String getType() 
    {
        return "there are " + this.numberOfAnswer + " possible answers";
    }
    
    @Override
	public String toString()
	{
    	return this.answer;
	}
}
