package oie;

public class Board 
{
	protected final int nbOfCells;
	protected Cell theCells[];
	
	public Board(int noc)
	{
		this.nbOfCells = noc;
	}
	
	protected void initBoard()
	{
		for (int i =0 ; i<  nbOfCells +1;i++)
		{
			if ( i%9 == 0)
				theCells[i] = new GooseCell();
			
			else if (i == 31 || i == 52 )
				theCells[i] = new TrapCell();
			
			else if (i == 19)
				theCells[i] = new WaitCell();
			
			else if (i == 6  || i == 42 || i == 58 )
				theCells[i] = new TeleportCell();
			
			else theCells[i] = new NormalCell();
		}
	}
	
	public Cell getCell(int num)
	{
		return this.theCells[num];
	}
	
	public int getNbOfCells()
	{
		return this.nbOfCells;
	}
}
