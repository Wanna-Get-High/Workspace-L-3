package mail;

public class BillOfExchange extends Mail<Money> 
{
	public BillOfExchange(Inhabitant sen, Inhabitant rec, Money content) 
	{
		super(sen, rec, content);
	}

	@Override
	public void action() 
	{
		this.sender.debitAccount(this.content.getValue());
		this.receiver.creditAccount(this.content.getValue());
		this.receiver.sendMail(new Thanks(this.receiver, this.sender, this.receiver.toString()));
	}

	@Override
	public float getCost() 
	{
		// TODO Auto-generated method stub
		return 0;
	}
}
